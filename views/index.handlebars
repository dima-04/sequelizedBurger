<h1>Yummy Burger!!!</h1>
<div class="container">
  <div class="row">
    <img src="/assets/images/burger.png" alt="burger" class="img-thumbnail image center-block mt-5">
  </div>

  <div class="row">
    <div class=" col-6 mx-auto">
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/unless}}
      {{/each}}
      </ul>
    </div>
    <div class=" col-6 mx-auto">
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/if}}
      {{/each}}
      </ul>
    </div>
  </div>
</div>
<div class="row">
  <div class=" col-6 mx-auto text-center mt-5">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
      </div>
      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>